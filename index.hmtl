<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>StyleMate - Virtual Wardrobe</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f6f4f2;
      color: #333;
      padding: 20px;
    }
    h1 {
      text-align: center;
      color: #6d4c41;
    }
    .container {
      max-width: 700px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    input, select, button {
      padding: 10px;
      margin: 10px 5px;
      font-size: 16px;
    }
    .wardrobe-item {
      padding: 8px;
      margin: 5px;
      background: #eceff1;
      border-radius: 8px;
    }
    .outfit {
      font-weight: bold;
      margin-top: 20px;
      background: #e8f5e9;
      padding: 10px;
      border-left: 4px solid #66bb6a;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üëó StyleMate</h1>

    <h2>Add Clothing Item</h2>
    <input type="text" id="itemName" placeholder="e.g. Red T-Shirt">
    <select id="itemCategory">
      <option value="Top">Top</option>
      <option value="Bottom">Bottom</option>
      <option value="Shoes">Shoes</option>
      <option value="Accessory">Accessory</option>
    </select>
    <input type="color" id="itemColor" value="#ff0000">
    <button onclick="addClothing()">Add</button>

    <h2>Your Wardrobe</h2>
    <div id="wardrobeList"></div>

    <h2>Outfit Suggestion</h2>
    <button onclick="suggestOutfit()">üéØ Suggest Outfit</button>
    <div id="outfitSuggestion" class="outfit"></div>
  </div>

  <script>
    const wardrobe = [];

    function addClothing() {
      const name = document.getElementById('itemName').value;
      const category = document.getElementById('itemCategory').value;
      const color = document.getElementById('itemColor').value;

      if (!name) return alert('Please enter a name.');

      wardrobe.push({ name, category, color });
      renderWardrobe();
      document.getElementById('itemName').value = '';
    }

    function renderWardrobe() {
      const wardrobeList = document.getElementById('wardrobeList');
      wardrobeList.innerHTML = '';
      wardrobe.forEach(item => {
        const div = document.createElement('div');
        div.className = 'wardrobe-item';
        div.innerHTML = `<span style="color:${item.color}; font-weight:bold;">‚óè</span> [${item.category}] ${item.name}`;
        wardrobeList.appendChild(div);
      });
    }

    function suggestOutfit() {
      const top = wardrobe.find(item => item.category === 'Top');
      const bottom = wardrobe.find(item => item.category === 'Bottom');
      const shoes = wardrobe.find(item => item.category === 'Shoes');
      let outfit = [];

      if (top) outfit.push(`Top: ${top.name}`);
      if (bottom) outfit.push(`Bottom: ${bottom.name}`);
      if (shoes) outfit.push(`Shoes: ${shoes.name}`);
      if (outfit.length === 0) outfit.push("You don't have enough clothes!");

      document.getElementById('outfitSuggestion').innerText = outfit.join('\n');
    }
  </script>
</body>
</html>
